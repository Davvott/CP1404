BoxLayout:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: (0, 0, 0, 0.2)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.3

        Label:
            text: 'Enter Grade:'
            size_hint_x: 0.3
        TextInput:
            id: text_input
            text: ''
            on_text: app.handle_grade_score()

    BoxLayout:
        orientation: 'horizontal'

        Label:
            id: output_display
            text: ''
            color: (1, 1, 0, 1)


