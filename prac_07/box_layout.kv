BoxLayout:
    orientation: 'vertical'
#    orientation: 'horizontal'
    Button:
        text: 'Clear'
    TextInput:
        id: input_name
        text: ''
    Button:
        text: 'Greet'
        on_press: app.handle_greet()
    Label:
            # Draw spaces need canvas for area to be 'refreshed'
        canvas:
            Color:
                rgba: 128, 128, 128, 0.2
            Rectangle:
                pos: self.pos
                size: self.size

        id: output_label
        text: 'Enter your name'
        color: (1, 1, 0, 1)
