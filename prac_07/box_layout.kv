BoxLayout:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: 128, 128, 128, 0.2
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'horizontal'

        Button:
            size_hint_x: 0.3
            text: 'Clear'
            on_press: app.handle_clear()
        TextInput:
            id: input_name
            text: ''
            on_text: app.handle_greet()
    BoxLayout:
        orientation: 'horizontal'

        Button:
            size_hint_x: 0.3
            text: 'Greet'
            on_press: app.handle_greet()
        Label:
                # Draw spaces need canvas for area to be 'refreshed'


            id: output_label
            text: 'Enter your name'
            color: (1, 1, 0, 1)
