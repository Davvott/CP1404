BoxLayout:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        # this layout is populated with Label widgets in app code
        orientation: 'vertical'
        id: list_box

    TextInput:
        id: text_input
        size_hint_y: 0.1
        text: "Type here to add"
        color: (0, 0, 0, 1)
        multiline: False

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2

        Button:
            text: "Create Widgets"
            on_release: app.create_widgets()
        Button:
            text: "Add Widget"
            on_release: app.add_widget()
        Button:
            text: "Clear Widgets"
            on_release: app.clear_all()
    BoxLayout:
        size_hint_y: 0.2
        Label:
            id: status_bar
            text: app.status_msg
