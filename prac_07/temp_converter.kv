BoxLayout:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: (0, 0, 0, 0.2)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: text_input
            text: '0'
            font_size: 40
            multiline: False
            on_text: app.handle_conversion()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

    Button:
        text: 'Convert Fahrenheit to Celsius'
        on_press: app.handle_conversion()

    Label:
        id: ouput_display
        text: app.display_text
        multiline: False